<Window x:Class="ManualButton.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ManualButton"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="MyGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" /> 
        </Grid.RowDefinitions>
        <TextBox Name="txtbox" Width="500" Height="50" TextAlignment="Center" FontSize="30" />
        <Button Name="btn" Content="CLICK ME!" Click="My_Handler" FontSize="30" Grid.Row="1"/>
    </Grid>
</Window>
